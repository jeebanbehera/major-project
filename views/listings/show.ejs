<% layout("/layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-10 offset-2">
      
    <div class="card col-8 offset-1 show-card listing-card">
      <h3><%=listing.title%></h3>
      <% console.log(listing) %>
        <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing_img">
        <div class="card-body">
          <p class="card-text">Owner: <b><%= listing.owner.username %></b></p>
          <p class="card-text"><%=listing.description%></p>
          <p class="card-text"><%=listing.category%></p>
            <p class="card-text"> &#8377;<%= listing.price.toLocaleString("en-IN") %></p>
            <p class="card-text"><%= listing.location %></p>
            <p class="card-text"><%= listing.country %></p>
        </p>
        </div>
      </div>
      <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
        <div class="btns">
          <a href="/Listings/<%=listing._id %>/edit" class="btn btn-dark edit-btn offset-1  " style="width: 5rem;">Edit </a>
        
          <form method="post" action="/Listings/<%= listing._id %>?_method=DELETE" class="col-1">
            <button class="btn btn-dark  offset-4">Delete</button>
          </form>
        </div>
      <% } %>
        <div class="col-8 offset-1">
          <% if(currUser) { %>
            <hr>
              <h4>Leave a review</h4>             
              <form action="/Listings/<%=listing.id %>/reviews" method="POST" class="needs-validation" novalidate>
                <!-- <div class="mb-3 mt-3">
                  <label for="review">Review</label>
                  <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
                </div> -->
                <div class="mb-3 mt-3"></div>
                <label for="review">Review</label>
                <fieldset class="starability-slot">
                  <!-- <legend>First rating:</legend> -->
                  <input type="radio" id="no-rate" class="input-no-rate" name= "review[rating]"value="1" checked aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
                
                <div class="mb-3 mt-3">
                  <label for="comment">comment</label>
                  <textarea type="text" name="review[comment]" id="comment" cols="50" rows="5"  class="form-control" required></textarea>
                  <div class="invalid-feedback">Enter some feedback </div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
              </form>
            <% } %>
            <hr>
            <p><b>All Reviews</b></p>
            <div class="row ">
              <% for (review of listing.reviews) { %>
                <div class="card col-5 mb-3 ms-3 ">
                  <div class="card-body">
                      <h5 class="card-title"><%= review.author.username %></h5>
                      <p class="card-text"  ><%= review.comment %></p>
                      <p class="starability-result card-text" data-rating=<%=review.rating %>>
                      </p>
                      <form class="mb-3" method="POST" action="/Listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                        <button class="btn btn-dark btn-sm">delete</button>
                      </form>
                  </div>
                  
                </div>
            <% }%>
            </div>             
        </div>
    </div>
  </div>
  <br>
  <br>

</body>

